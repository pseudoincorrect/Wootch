{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": "iot:Connect",
      "Resource": [
        "arn:aws:iot:eu-west-1:AWS_ACCOUNT_ID:client/${iot:ClientId}"
      ]
    },
    {
      "Effect": "Allow",
      "Action": "iot:Publish",
      "Resource": [
        "arn:aws:iot:eu-west-1:AWS_ACCOUNT_ID:topic/WootchDev/device/${iot:ClientId}/data/activity",
        "arn:aws:iot:eu-west-1:AWS_ACCOUNT_ID:topic/WootchDev/device/${iot:ClientId}/data/securityLvl"
      ]
    },
    {
      "Effect": "Allow",
      "Action": "iot:Subscribe",
      "Resource": [
        "arn:aws:iot:eu-west-1:AWS_ACCOUNT_ID:topicfilter/WootchDev/device/${iot:ClientId}/notification/alert"
      ]
    },
    {
      "Effect": "Allow",
      "Action": "iot:Receive",
      "Resource": [
        "arn:aws:iot:eu-west-1:AWS_ACCOUNT_ID:topic/WootchDev/device/${iot:ClientId}/notification/alert"
      ]
    }
  ]
}

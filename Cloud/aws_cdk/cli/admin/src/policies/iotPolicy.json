{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": "iot:Connect",
      "Resource": ["arn:aws:iot:eu-west-1:AWS_ACCOUNT_ID:client/${iot:ClientId}"]
    },
    {
      "Effect": "Allow",
      "Action": "iot:Subscribe",
      "Resource": ["arn:aws:iot:eu-west-1:AWS_ACCOUNT_ID:topicfilter/wootch/data"]
    },
    {
      "Effect": "Allow",
      "Action": "iot:Publish",
      "Resource": ["arn:aws:iot:eu-west-1:AWS_ACCOUNT_ID:topic/wootch/data"]
    },
    {
      "Effect": "Allow",
      "Action": "iot:Subscribe",
      "Resource": [
        "arn:aws:iot:eu-west-1:AWS_ACCOUNT_ID:topicfilter/wootch/notification/alert"
      ]
    },
    {
      "Effect": "Allow",
      "Action": "iot:Receive",
      "Resource": [
        "arn:aws:iot:eu-west-1:AWS_ACCOUNT_ID:topic/wootch/notification/alert"
      ]
    }
  ]
}
